 generate_version_info (wsjtx_VERSION_RESOURCES
@@ -1411,7 +1346,7 @@ target_include_directories (wsjtx PRIVATE ${FFTW3_INCLUDE_DIRS})
 if (APPLE)
   target_link_libraries (wsjtx wsjt_fort)
 else ()
