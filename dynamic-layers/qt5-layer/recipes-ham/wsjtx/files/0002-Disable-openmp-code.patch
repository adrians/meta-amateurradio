diff --git a/CMakeLists.txt b/CMakeLists.txt
index 1a6288423..2ed8a20ae 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -916,12 +916,6 @@ set (CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -Werror -Wall -Wextra -fexceptions -frt
 
 if (NOT APPLE)
   set (CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -Wno-pragmas")
